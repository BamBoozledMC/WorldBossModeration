      <a id="userinfo"> <img src=<%= discordpfp %> alt="pfp" style="width:48px; height:48px; float: left; border-radius: 30px; padding: 5px;"> <%= discordname %> </a>
      <button id="loginbutton" onclick="window.location.href = 'https://wbmoderation.com/dashboard/auth/discord'">Login</button>
      <button id="logoutbutton" onclick="window.location.href = 'https://wbmoderation.com/dashboard/auth/logout'">Logout</button>
    </div>
<h1>Dashboard</h1>
<p class="subhead">Manage and configure settings for World Boss Moderation.</p>
<p id="notinguild">You are not in the World Boss Discord server.</p>
<p id="noaccess">You require the <code>MANAGE_GUILD</code> permission to access this feature.</p>
<p id="loginrequired">Please <button id="textloginbutton" onclick="window.location.href = 'https://wbmoderation.com/dashboard/auth/discord'">Login</button> with Discord to access the dashboard.</p>
<div id="hideifnoaccess" class="center">
  <p class="subhead">Available Guilds</p>
  <div class="wbguild" onclick="window.location.href = 'https://wbmoderation.com/dashboard/server/929941845004415046'">
    <img style="border-radius: 64px;width: 128px; height: 128px;" src="<%= wbicon %>" alt="World Boss Discord Image">
    <p style="color: black;"><%= wbname %></p>
  </div>
</div>

<script type="text/javascript">
  function checkLogin() {
    if (!<%= loggedin %>) {
      document.getElementById("loginbutton").style.display = "block";
      document.getElementById("userinfo").style.display = "none";
      document.getElementById("noaccess").style.display = "none";
      document.getElementById("notinguild").style.display = "none";
      document.getElementById("loginrequired").style.display = "block";
      document.getElementById("hideifnoaccess").style.display = "none";
    } else {
      document.getElementById("userinfo").style.display = "block";
      document.getElementById("logoutbutton").style.display = "block";
      document.getElementById("loginbutton").style.display = "none";
      if (!<%= inguild %>) {
        document.getElementById("notinguild").style.display = "block";
        document.getElementById("hideifnoaccess").style.display = "none";
      } else {
        if (!<%= hasaccess %>) {
          document.getElementById("noaccess").style.display = "block";
          document.getElementById("loginrequired").style.display = "none";
          document.getElementById("hideifnoaccess").style.display = "none";
        } else {
          document.getElementById("noaccess").style.display = "none";
          document.getElementById("hideifnoaccess").style.display = "block";
        }
      }
    }
  }

    function next() {
      fetch('/vlc/actions/?action=next', {method: 'POST'})
      .then(async response => {
        let e = await response.text()
        if (e == 'success') {
          var x = document.getElementById("snackbar");
            x.className = "show";
            setTimeout(function(){ x.className = x.className.replace("show", ""); }, 3000);
          }
        })
    }
</script>
